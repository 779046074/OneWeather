<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/common_dimen_big">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="@dimen/common_dimen"
        android:layout_marginRight="@dimen/common_dimen"
        android:layout_marginBottom="@dimen/common_dimen"
        android:background="@color/white"
        />


    <com.yoga.oneweather.widget.SunriseSunset
        android:id="@+id/sunmove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_huge"
        app:lineColor="@color/white"
        app:sunColor="@color/orange500"
        app:timeTextSize="@dimen/text_size_default"
        app:timeTextColor="@color/white"/>


</LinearLayout>